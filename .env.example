# TinyMCE Configuration
# Option 1: Use free jsDelivr CDN (recommended - no API key needed)
# Just leave TINYMCE_API_KEY empty or set to 'your_api_key_here'

# Option 2: Use TinyMCE Cloud (requires API key)
# Get your API key from https://www.tiny.cloud/my-account/dashboard/
# If you want to use TinyMCE Cloud, set your API key below:
TINYMCE_API_KEY=your_api_key_here

# Only needed if using TinyMCE Cloud with API key
TINYMCE_ALLOW_LOCALHOST=true

# Resend Configuration
# Create a Resend account and generate an API key.
RESEND_API_KEY=your_resend_api_key

# Optional: override the Resend API base URL
# RESEND_API_URL=https://api.resend.com

# Email Sender Configuration
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Your Blog Name

# Email Debugging
EMAIL_DEBUG=false

# Email Settings
EMAIL_VERIFICATION_REQUIRED=true
PASSWORD_RESET_TOKEN_EXPIRY=3600  # 1 hour in seconds
EMAIL_VERIFICATION_TOKEN_EXPIRY=86400  # 24 hours in seconds
