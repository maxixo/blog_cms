# App Environment
APP_ENV=production
APP_DEBUG=false
# Full base URL for the site, used in emails and asset URLs
APP_BASE_URL=https://example.com
# If the app is hosted in a subdirectory, set it here (e.g. /blog_cms). Leave empty for root.
APP_BASE_PATH=/blog_cms
APP_FORCE_HTTPS=true
APP_ERROR_LOG=logs/app.log

# Database
DB_HOST=localhost
DB_USER=blog_cms
DB_PASS=your_password
DB_NAME=blog_cms

# Site Settings
SITE_NAME=Blog CMS
SITE_TAGLINE=Publishing with clarity.
SITE_DESCRIPTION=A full-featured blog and content management system.
SITE_EMAIL=admin@example.com

# Pagination
POSTS_PER_PAGE=6
COMMENTS_PER_PAGE=10

# RSS Feed
RSS_FEED_LIMIT=20
RSS_CACHE_DURATION=1800
RSS_DESCRIPTION_LENGTH=300
RSS_INCLUDE_IMAGES=true

# Search Settings
MIN_SEARCH_LENGTH=2
SEARCH_MAX_RESULTS=100
SEARCH_CACHE_DURATION=300

# Auth Settings
ENABLE_REGISTRATION=true
ADMIN_EMAIL=admin@example.com
# Optional: comma-separated list for multiple admin accounts.
ADMIN_EMAILS=

# TinyMCE Configuration
# Option 1: Use free jsDelivr CDN (recommended - no API key needed)
# Just leave TINYMCE_API_KEY empty or set to 'your_api_key_here'

# Option 2: Use TinyMCE Cloud (requires API key)
# Get your API key from https://www.tiny.cloud/my-account/dashboard/
# If you want to use TinyMCE Cloud, set your API key below:
TINYMCE_API_KEY=your_api_key_here

# Only needed if using TinyMCE Cloud with API key
TINYMCE_ALLOW_LOCALHOST=true

# Resend Configuration
# Create a Resend account and generate an API key.
RESEND_API_KEY=your_resend_api_key

# Optional: override the Resend API base URL
# RESEND_API_URL=https://api.resend.com

# Email Sender Configuration
RESEND_FROM_EMAIL=noreply@yourdomain.com
RESEND_FROM_NAME=Your Blog Name

# Email Debugging
EMAIL_DEBUG=false

# Email Settings
EMAIL_VERIFICATION_REQUIRED=true
PASSWORD_RESET_TOKEN_EXPIRY=3600  # 1 hour in seconds
EMAIL_VERIFICATION_TOKEN_EXPIRY=86400  # 24 hours in seconds
